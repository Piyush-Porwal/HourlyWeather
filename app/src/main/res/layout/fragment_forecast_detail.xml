<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="hourlyForecastData"
            type="com.piyush.weatherofthecity.data.weather.model.HourlyForecastData" />
        <variable
            name="cityName"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="742dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="2dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="@{cityName}"
            app:titleTextColor="@color/white" />

        <TextView
            android:id="@+id/temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:text="@{hourlyForecastData.temp.toString()}"
            android:textSize="60sp"/>

        <TextView
            android:id="@+id/feel_like_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/feel_like_temp_tv"
            app:layout_constraintTop_toBottomOf="@id/temp_tv"
            android:layout_marginTop="10dp"
            android:text="Feels Like : "
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/feel_like_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/temp_tv"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:text="@{hourlyForecastData.feels_like.toString()}"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/cloud_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feel_like_tv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Clouds "
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/cloud_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cloud_tv"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:text="@{hourlyForecastData.weather[0].description}"
            android:textSize="22sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>